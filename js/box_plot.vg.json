{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 450,
    "height": 250,
    "title": "Spread of Meteorites (g) excluding Outliers",
    "data": {
      "url": "https://raw.githubusercontent.com/Dilakvin/Meteor-Landings-/main/data/Meteorite_Landings.csv"
    },
    "mark": {
        "type": "boxplot",
        "extent": "min-max"
    },
    "encoding": {
        "x": {"field": "year", "type": "nominal"},
        "y": {"field": "mass", "type": "quantitative"},
        "color": {"field": "year", "type": "nominal", "scale": {"zero": false}},
        "tooltip": [
            {"field": "name", "type": "nominal", "title": "Name"},
            {"field": "mass", "type": "quantitative", "title": "Mass (g)"},
            {"field": "recclass", "type": "nominal", "title": "Type"}]
    },
    "params": [
        {
          "name": "recclass",
          "bind": {
            "input": "select",
            "options": [
              null,
              "L6",
              "H5",
              "H6",
              "H4",
              "L5",
              "LL6",
              "LL5",
              "L4",
              "CV3",
              "Eucrite-pmict"
            ],
            "labels": [
                "Show All",
                "L6",
                "H5",
                "H6",
                "H4",
                "L5",
                "LL6",
                "LL5",
                "L4",
                "CV3",
                "Eucrite-pmict"
            ],
            "name": "Meteorite Types: "
          }
        }
    ],
    "transform": [
        {
          "filter": "recclass == null || datum.recclass == recclass"
        }
    ]

}